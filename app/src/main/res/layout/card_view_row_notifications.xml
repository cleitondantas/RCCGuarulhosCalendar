<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notifications"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPaddingBottom="0dp"
        card_view:contentPaddingLeft="0dp"
        card_view:contentPaddingRight="-5dp"
        card_view:contentPaddingTop="0dp">

        <RelativeLayout
            android:id="@+id/relative_info_list_cardview_notification"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_notification_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_notification_title"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/colorrowcardview_notification"
            android:layout_width="12dp"
            android:layout_height="70dp"
            android:paddingLeft="-5dp"
            android:layout_below="@+id/relative_info_list_cardview_notification"/>

    </android.support.v7.widget.CardView>


</LinearLayout>


