<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*">
    <!-- INICIO SUMARIO -->

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="12dp" android:text="Evento:"  android:layout_span="3"
            android:padding="2dp" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idsumario"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp" android:text="Row 1"  android:layout_span="3"
            android:paddingBottom="3dp" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>
    <!-- FIM SUMARIO -->


    <!-- INICIO DESCRICAO -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="12dp" android:text="Descricao:"  android:layout_span="3"
            android:padding="1dip" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idDescricao"
            android:autoLink="web"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="13dp" android:text="Descricao..."  android:layout_span="3"
            android:paddingBottom="10dp" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>
    <!-- FIM DESCRICAO -->

    <!-- INICIO DATA HORA -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="DATA HORA INICIO"
            android:layout_weight="1" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"
            android:padding="2dip" android:gravity="center"/>

        <TextView
            android:text="DATA HORA FIM"
            android:layout_weight="1" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"
            android:padding="2dip" android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idDataHoraInicio"
            android:text="VALO DATA HORA INICIO"
            android:layout_weight="1" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"
            android:paddingBottom="20dip" android:gravity="center"/>

        <TextView
            android:id="@+id/idDataHoraFim"
            android:text="VALOR DATA HORA FIM"
            android:layout_weight="1" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"
            android:paddingBottom="20dip" android:gravity="center"/>
    </TableRow>
    <!-- FIM DE DATA HORA -->

    <!-- INICIO LOCAL -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="12dp" android:text="Local:"  android:layout_span="3"
            android:padding="1dip" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idLocal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="12dp" android:text="Evento:"  android:layout_span="3"
            android:paddingBottom="20dip" android:background="@color/backgroundCards"
            android:textColor="@color/textTistviewColor"/>
    </TableRow>


</TableLayout>
