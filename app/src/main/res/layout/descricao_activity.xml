<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
    <!-- INICIO SUMARIO -->

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp" android:text="Evento:"  android:layout_span="3"
            android:padding="1dip" android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idsumario"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="18dp" android:text="Row 1"  android:layout_span="3"
            android:paddingBottom="10dip" android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>
    <!-- FIM SUMARIO -->


    <!-- INICIO DESCRICAO -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp" android:text="Descricao:"  android:layout_span="3"
            android:padding="1dip" android:background="#ececec"
            android:textColor="#000"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idDescricao"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="18dp" android:text="Descricao..."  android:layout_span="3"
            android:paddingBottom="18dip" android:background="#ececec"
            android:textColor="#000"/>
    </TableRow>
    <!-- FIM DESCRICAO -->

    <!-- INICIO DATA HORA -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="DATA HORA INICIO"
            android:layout_weight="1" android:background="#b0b0b0"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"/>

        <TextView
            android:text="DATA HORA FIM"
            android:layout_weight="1" android:background="#a09f9f"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idDataHoraInicio"
            android:text="VALO DATA HORA INICIO"
            android:layout_weight="1" android:background="#b0b0b0"
            android:textColor="#000000"
            android:paddingBottom="20dip" android:gravity="center"/>

        <TextView
            android:id="@+id/idDataHoraFim"
            android:text="VALOR DATA HORA FIM"
            android:layout_weight="1" android:background="#a09f9f"
            android:textColor="#000000"
            android:paddingBottom="20dip" android:gravity="center"/>
    </TableRow>
    <!-- FIM DE DATA HORA -->

    <!-- INICIO LOCAL -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp" android:text="Local:"  android:layout_span="3"
            android:padding="1dip" android:background="#e2e2e2"
            android:textColor="#000"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/idLocal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp" android:text="Evento:"  android:layout_span="3"
            android:paddingBottom="20dip" android:background="#e2e2e2"
            android:textColor="#000"/>
    </TableRow>
    <!-- FIM LOCAL -->
