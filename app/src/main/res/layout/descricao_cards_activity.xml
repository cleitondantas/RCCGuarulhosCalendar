<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.DescricaoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ProgressBar
                android:id="@+id/pbHeaderProgress"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:gravity = "center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ProgressBar>


            <br.com.v8developmentstudio.rccguarulhos.adapter.ScaleImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                android:layout_alignParentTop="true" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar3"
                android:title="@string/informacoes"
                android:elevation="5dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:minHeight="48dp"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/relative_descricao"
            android:layout_width="match_parent"
            android:layout_height="-80dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
             <include layout="@layout/cardview_descricao"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMaps"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@+id/card_view"
        android:src="@drawable/maps_icon"
        app:layout_anchorGravity="right|end|bottom"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/idFabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/idFabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_share_white_24dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/idFabAddCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_event_white_24dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />

    <ImageView
        android:id="@+id/expanded_image"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
</android.support.design.widget.CoordinatorLayout>
